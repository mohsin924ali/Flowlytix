# Application Configuration
NEXT_PUBLIC_APP_NAME="Flowlytix Dashboard"
NEXT_PUBLIC_APP_URL="https://your-app-name.vercel.app"

# API Configuration (Railway Backend)
NEXT_PUBLIC_API_URL="https://your-railway-app.railway.app"

# Subscription API Configuration
SUBSCRIPTION_API_URL="https://flowlytix-subscription-backend-production.up.railway.app"

# Authentication (if using NextAuth.js)
NEXTAUTH_URL="https://your-app-name.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_REALTIME="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"

# Environment
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

# Optional: Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# Optional: External Services  
NEXT_PUBLIC_SUPPORT_EMAIL="support@flowlytix.com"
NEXT_PUBLIC_COMPANY_NAME="Flowlytix" 