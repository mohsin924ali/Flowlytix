{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist/main",
    "noEmit": false,
    "jsx": "preserve",
    "composite": true,
    "tsBuildInfoFile": "dist/main/.tsbuildinfo",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/main/main.ts", "src/main/utils/**/*", "src/main/ipc/index.ts", "src/preload/**/*"],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/main/ipc/*.ipc.ts",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
