{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist/main",
    "noEmit": false,
    "jsx": "preserve",
    "composite": true,
    "tsBuildInfoFile": "dist/main/.tsbuildinfo",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/main/main.ts", "src/main/utils/**/*", "src/main/ipc/ipcHandlers.ts", "src/preload/**/*"],
  "exclude": [
    "src/main/ipc/__tests__/**/*",
    "src/main/ipc/agency.ipc.ts",
    "src/main/ipc/analytics.ipc.ts",
    "src/main/ipc/auth.ipc.ts",
    "src/main/ipc/customer.ipc.ts",
    "src/main/ipc/database.ipc.ts",
    "src/main/ipc/lot-batch.ipc.ts",
    "src/main/ipc/order.ipc.ts",
    "src/main/ipc/product.ipc.ts",
    "src/main/ipc/shipping.ipc.ts",
    "src/renderer/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/constants/**/*",
    "src/services/**/*",
    "src/stores/**/*",
    "src/presentation/**/*",
    "src/domain/**/*",
    "src/application/**/*",
    "src/infrastructure/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
